<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="Main illustration"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_banner_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:alpha="0.8"/>

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Znichka"
        android:textColor="@color/accentYellow"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        style="@style/Widget.Storybook.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Start Telling"
        android:textSize="18sp"
        app:icon="@drawable/ic_play"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@color/primaryDark"
        app:layout_constraintBottom_toTopOf="@id/btnShare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShare"
        style="@style/Widget.Storybook.Button.Secondary"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Share App"
        android:textSize="18sp"
        app:icon="@drawable/ic_share"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@color/accentYellow"
        app:layout_constraintBottom_toTopOf="@id/btnReview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReview"
        style="@style/Widget.Storybook.Button.Secondary"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Leave a Review"
        android:textSize="18sp"
        app:icon="@drawable/ic_review"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@color/accentYellow"
        app:layout_constraintBottom_toTopOf="@id/btnExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"/>

    <!-- TOMBOL EXIT BARU -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExit"
        style="@style/Widget.Storybook.Button.Secondary"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:text="Exit"
        android:textSize="18sp"
        app:icon="@drawable/ic_exit"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/accentPink"
        app:iconTint="@color/accentPink"
        android:textColor="@color/accentPink"/>

</androidx.constraintlayout.widget.ConstraintLayout>